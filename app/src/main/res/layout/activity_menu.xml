<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tienanh.btnhom1.Activities.MenuActivity">

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_logo" />

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:imeOptions="actionSearch"
        android:lines="1"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imgvSearch"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/edtSearch"
        android:layout_alignEnd="@+id/edtSearch"
        android:layout_alignRight="@+id/edtSearch"
        android:layout_alignTop="@+id/edtSearch"
        android:src="@drawable/header_search" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_menu"
        android:id="@+id/btnAgenda"
        android:layout_below="@+id/edtSearch"
        android:text="Agenda"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_menu"
        android:id="@+id/btnNews"
        android:layout_below="@+id/btnAgenda"
        android:text="News"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_menu"
        android:id="@+id/btnMembers"
        android:layout_below="@+id/btnNews"
        android:text="News"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_menu"
        android:id="@+id/btnSales"
        android:layout_below="@+id/btnMembers"
        android:text="Sales"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_menu"
        android:id="@+id/btnLeaderboard"
        android:layout_below="@+id/btnSales"
        android:text="Leaderboard"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgviconUser"
        android:src="@drawable/icon_user"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnLeaderboard" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProfile"
        android:text="Profile"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imgviconUser"
        android:layout_toEndOf="@+id/imgviconUser"
        android:background="@drawable/btn_menu"
        android:textColor="@color/colorwhitetext"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnQuit"
        android:text="Quit"
        android:textColor="@color/colorwhitetext"
        android:background="@drawable/btn_menu"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnLeaderboard"
        android:layout_alignEnd="@+id/btnLeaderboard" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgviconBack"
        android:src="@drawable/icon_back"
        android:layout_below="@+id/btnLeaderboard"
        android:layout_toLeftOf="@+id/imgvSearch"
        android:layout_toStartOf="@+id/imgvSearch"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
